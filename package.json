{
  "name": "cloudera-manager-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "MCP stdio server for Cloudera Manager REST API",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke:read": "ts-node src/scripts/smokeRead.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
